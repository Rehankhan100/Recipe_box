.main-content
  #recipe_top.row
    .col-md-4
      - if @recipe.image.present?
        = image_tag @recipe.image.url(), class: "recipe_image_show img-thumbnail"
    .col-md-8
      #recipe_info
        %h1= @recipe.title
        %p.description= @recipe.description

  .row
    .col-md-6
      #ingredients
        %h2 Ingredients
        %ul
          - @recipe.ingredients.each do |ingredient|
            - if ingredient.present?
              %li= ingredient.name
            - else
              %h2 No Ingredient Added Here!!

    .col-md-6
      #directions
        %h2 Directions
        %ul
          - @recipe.directions.each do |direction|
            %li= direction.step

  .row
    .col-md-12
      = link_to "Back", root_path, class: "btn btn-default"
      = link_to "Edit", edit_recipe_path, class:  "btn btn-default"
      = link_to "Delete", recipe_path, method: :delete, data: {confirm: "Are you want to delete"}, class:  "btn btn-default"
  %br

